<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="%category.textEditor.description"
            id="org.eclipse.etude.category.textEditor"
            name="%category.textEditor.name">
      </category>
      <command
            categoryId="org.eclipse.etude.category.textEditor"
            description="%showFineLines.description"
            id="org.eclipse.etude.toggleShowFineLines"
            name="%showFineLines.label">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="STYLE">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.etude.handlers.ShowLinesHandler"
            commandId="org.eclipse.etude.toggleShowFineLines">
         <enabledWhen>
            <reference
                  definitionId="org.eclipse.etude.definition.enableToogleShowFineLines">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.etude.toggleShowFineLines"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.eclipse.etude.toolbar"
               label="%showFineLines.label">
            <command
                  commandId="org.eclipse.etude.toggleShowFineLines"
                  icon="icons/tool16/ef.png"
                  id="org.eclipse.etude.toggleShowFineLines"
                  label="%showFineLines.label"
                  style="toggle"
                  tooltip="%showFineLines.tooltip">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.eclipse.etude.definition.enableToogleShowFineLines">
         <with
               variable="activeEditor">
            <instanceof
                  value="org.eclipse.ui.texteditor.AbstractTextEditor">
            </instanceof>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.etude.preferences.PreferencePageInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.ui.preferencePages.GeneralTextEditor"
            class="org.eclipse.etude.preferences.PreferencePage"
            id="org.eclipse.etude.preferencePages.FineLines"
            name="%preferencePages.FineLines">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipse.etude.PluginStartup"></startup>
   </extension>
</plugin>
